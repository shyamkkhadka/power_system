<% @generators.each_with_index do |generator, index| %>
	<div class="equipment-detail">
		<div class="element"> Generator # <%= index + 1 %> </div>
  	<div class="data-list<%= index % 2 == 0 ? '' : ' alternate' %>">
  		<div class="small-row"> 
  			<div class="small-left"> Genset name: </div>
  			<div class="small-right"><%=generator.genset_name %> </div>
  		</div>
  
  		<div class="small-row"> 
  			<div class="small-left"> Model no: </div>
  			<div class="small-right"><%= generator.model_no %> </div>
  		</div>
    
  		<div class="small-row"> 
  			<div class="small-left"> Alternator no: </div>
  			<div class="small-right"><%= generator.alternator_no %> </div>
  		</div>

  		<div class="small-row"> 
  			<div class="small-left"> Engine no: </div>
  			<div class="small-right"><%= generator.engine_no %> </div>
  		</div>
   
  		<div class="small-row"> 
  			<div class="small-left"> Capacity: </div>
  			<div class="small-right"><%= generator.capacity %>  KVA </div>
  		</div>
   
  		<div class="small-row"> 
  			<div class="small-left"> Installed date: </div>
  			<div class="small-right"><%= generator.installed_date %>  </div>
  		</div>

    	<div class="small-row"> 
  			<div class="small-left"> Installation team: </div>
  			<div class="small-right"><%= generator.installation_team %> </div>
  		</div>
     
  		<div class="small-row"> 
  			<div class="small-left"> Comment: </div>
  			<div class="small-right"><%= generator.comment %> </div>
  		</div>
     
    	<div class="small-row"> 
  			<div class="small-left"> 
  				<%= link_to "View Servicing history", generator_servicing_histories_path(generator) %> 
  			</div>
  		</div>
  	 
  	 <div class="small-row" style="margin-bottom: 6px;padding: 5px;"> 
  			<%= link_to 'Edit', edit_station_generator_path(@station, generator) %> | 
  			<%= link_to 'Delete', station_generator_path(@station, generator), :confirm => 'Are you sure?', :method => :delete %>
  		</div>

 </div>
	</div>
 

<% end %>

<%= link_to 'Add New Generator', new_station_generator_path(@station) %>
<script type="text/javascript">
	activate_tab(5);
</script>

